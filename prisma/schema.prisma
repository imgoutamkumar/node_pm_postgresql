generator client {
  //  provider = "prisma-client" 
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ProjectStatus {
  IN_PROGRESS
  COMPLETED
  PENDING
  MISSING_REQUIREMENTS
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Position {
  INTERN
  JUNIOR
  SENIOR
  LEAD
  MANAGER
}

enum TaskStatus {
  TO_DO
  IN_PROGRESS
  DONE
}

enum ProjectRole {
  MEMBER
  VIEWER
  ADMIN
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  name        String?
  password    String
  role        Role      @default(USER)
  designation String?
  projects    Project[]
  position    Position
  profilePic  String?
  isVerified  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Task relations
  assignedTasks Task[]    @relation("TaskAssignee")
  taskAssignors Task[]    @relation("TaskAssignor")
  comments      Comment[] @relation("TaskComment")

  projectMembers ProjectMember[]
}

model Project {
  id             String          @id @default(uuid())
  name           String
  description    String?
  project_status ProjectStatus   @default(PENDING)
  owner          User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId        String
  tasks          Task[]
  projectMembers ProjectMember[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  // Indexing ownerId for faster "Get My Projects" queries
  @@index([ownerId])
}

// New Model: Handles Many-to-Many relation between Users and Projects
model ProjectMember {
  id        String      @id @default(uuid())
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime    @default(now())

  @@unique([projectId, userId]) // Prevents adding the same user twice
  @@index([userId]) // Optimize looking up "What projects am I in?"
}

model Task {
  id           String       @id @default(uuid())
  title        String
  description  String?
  task_status  TaskStatus   @default(TO_DO)
  priority     Priority     @default(MEDIUM)
  assignee     User         @relation("TaskAssignee", fields: [assigneeId], references: [id])
  assigneeId   String
  assignor     User         @relation("TaskAssignor", fields: [assignedById], references: [id])
  assignedById String
  project      Project      @relation(fields: [projectId], references: [id])
  projectId    String
  comments     Comment[]
  attachments  Attachment[] @relation("taskAttachments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Performance Indexes
  @@index([projectId]) // Critical for "Get Project Tasks"
  @@index([assigneeId]) // Critical for "Get My Tasks"
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  user      User     @relation("TaskComment", fields: [userId], references: [id])
  userId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId]) // Speeds up loading comments for a specific task
}

model Attachment {
  id        String   @id @default(uuid())
  fileUrl   String
  task      Task     @relation("taskAttachments", fields: [taskId], references: [id], onDelete: Cascade)
  taskId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId]) // Speeds up loading attachments for a specific task
}
